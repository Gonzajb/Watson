@model WatsonORT.Presentacion.Models.IngresoCodigoViewModel
@{
    ViewBag.Title = "Resultado del análisis";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("IngresoCodigo", "ResultadoWatson"))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Ingresá el código que te enviamos a tu casilla de correo</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.CodigoConsulta, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.CodigoConsulta, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.CodigoConsulta, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-primary" value="Enviar" />
                @Html.ActionLink("Volver", "Index", "Home", new { area = "" }, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
}

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }


